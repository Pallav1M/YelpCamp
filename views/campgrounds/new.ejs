<% layout('layout/boilerplate.ejs') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <!-- if i want the middle 6 in the center, i can use offset-3 -->
        <div class="col-md-6 offset-md-3">
            <!-- See "https://getbootstrap.com/docs/5.0/forms/validation/" for details on the form validation-->
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <!-- From https://getbootstrap.com/docs/5.0/forms/input-group/ -->
                    <label class="form-label" for="title">Title</label>
                    <!-- name is used to group contents together -->
                    <input class="form-control" type="text" id="title" name="campgrounds[title]" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <!-- name is used to group contents together -->
                    <input class="form-control" type="text" id="location" name="campgrounds[location]" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <!-- <div class="form-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text">Choose image(s)...</span>
                            <span class="form-file-button"> Browse</span>
                        </label>
                    </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price"
                            aria-describedby="price-label" name="campgrounds[price]" required>
                        <div class="valid-feedback">
                            Looks Good
                        </div>
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <!-- name is used to group contents together -->
                    <textarea class="form-control" type="text" id="description" name="campgrounds[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" name="image" id="image" multiple>
                        <!-- <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button"> Browse</span>
                        </label> -->
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <input type="file" name="image" id="image" multiple>
                </div> -->
                <div class="mb-3">
                    <button class="btn btn-success"> Add Campground</button>
                </div>
                <a href="/campgrounds">All Campgrounds</a>
            </form>
        </div>
    </div>